<div class="container text-center pt-5">
  <div class="row">
    <div class="col-4 border border-secondary rounded p-2">
      <img src="{{product.image}}" alt="{{product._id}}" class="img-fluid object-fit-cover" />
    </div>
    <div class="col-8">
      <div class="p-3">
        <h3> {{product.title}}</h3>
      </div>
      <div class="text-success fs-4">${{product.price}}</div>
